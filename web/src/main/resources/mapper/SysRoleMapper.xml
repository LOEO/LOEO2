<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loeo.mapper.SysRoleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.loeo.domain.entity.SysRole">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="code" property="code"/>
		<result column="descp" property="descp"/>
		<result column="createUser" property="createUser"/>
		<result column="created" property="created"/>
		<result column="updateUser" property="updateUser"/>
		<result column="updated" property="updated"/>
		<result column="enable" property="enable"/>
	</resultMap>
	<select id="getUserHasRoles" resultType="com.loeo.domain.entity.SysRole">
		select r.* from t_sys_role r join t_sys_user_role ur on r.id=ur.roleId and ur.userId=#{userId};
	</select>
	<select id="getUserNotHasRoles" resultType="com.loeo.domain.entity.SysRole">
		select r.* from t_sys_role r where r.id not in (select roleId from t_sys_user_role where userId=#{userId});
	</select>

</mapper>
